:root {
    --text-shadow: 1px 1px 1px black;
    --text-shadow-none: 0 0 0 transparent;
}

.welcome-popup {
    width: 100%;
    height: 100%;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    -unity-font-definition: url("project://database/Assets/Fonts/Montserrat-Regular SDF.asset");
    text-shadow: var(--text-shadow);
    white-space: normal;
    position: absolute;
}

.welcome-popup #_content{
    height: 500px;
    width: 300px;
    border-radius: 10px;
    background-color: white;
    background-image: url("project://database/Assets/Art/purplegradient.png");
}

.welcome-popup #_closeOverlay {
    width: 100%;
    height: 100%;
    position: absolute;
}

.welcome-popup #_okButton{
    width: 200px;
}

.welcome-popup #_desc{
    font-size: 17px;
    text-shadow: var(--text-shadow-none);
}

.welcome-popup #_point1, #_point2, #_point3{
    font-size: 15px;
    text-shadow: var(--text-shadow-none);
}

